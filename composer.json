{
    "name": "mirko-pagliai/php-doc-maker",
    "description": "A tool to generate documentation of PHP projects and libraries",
    "homepage": "https://github.com/mirko-pagliai/php-doc-maker",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "mirko-pagliai/php-tools": "^1.4|dev-php5.6",
        "roave/better-reflection": "^3.3|^4.2",
        "twig/twig": "^2.12|^3.0",
        "phpdocumentor/reflection-docblock": "^4.3|^5.1",
        "league/commonmark": "^1.4",
        "symfony/console": "^4.3|^5.1",
        "symfony/options-resolver": "^4.3|^5.1",
        "symfony/event-dispatcher": "^4.3|^5.1"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^4.0",
        "phpunit/phpunit": "^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "PhpDocMaker\\": "src"
        },
        "files": [
            "config/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/test_app",
            "PhpDocMaker\\Test\\": "tests/TestCase"
        }
    }
}
