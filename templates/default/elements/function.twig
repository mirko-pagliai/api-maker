<a name="{{ function.getName }}"></a>
<div class="pb-1 pt-2 px-2 mb-3 bg-info text-white"><h5>{{ function.getName }}()</h5></div>

<div class="ml-3">
    <pre><code class="language-php">{{ function }}</code></pre>

    <blockquote class="blockquote">
        <small class="font-weight-light">{{ function.getDocBlockAsString }}</small>
    </blockquote>

    {% if function.getParameters|length > 0 %}
        <h6>Parameters</h6>
        {% for parameter in function.getParameters %}
            <div class="mb-3">
                <code class="language-php">{{ parameter }}</code>
                {{ parameter.getDocBlockAsString }}
            </div>
        {% endfor %}
    {% endif %}

    {% if function.getReturnTypeAsString and function.getReturnTypeAsString != 'void' %}
        <h6>Return</h6>
        <div class="mb-3">
            <div><code>{{ function.getReturnTypeAsString }}</code></div>
            {% if function.getReturnDescription %}
                <div>{{ function.getReturnDescription }}</div>
            {% endif %}
        </div>
    {% endif %}

    {% if function.isDeprecated %}
        <h6>Deprecated</h6>
        <div class="mb-3">
            <div>{{ function.getDeprecatedDescription }}</div>
        </div>
    {% endif %}

    {% if function.getSeeTags|length > 0 %}
        <h6>See</h6>
        <div class="mb-3">
            {% for see in function.getSeeTags %}
                    <div>{{ see }}</div>
            {% endfor %}
        </div>
    {% endif %}

    {% if function.getThrowsTags|length > 0 %}
        <h6>Throws</h6>
        {% for throws in function.getThrowsTags %}
            <div class="mb-3">
                <div><code>{{ throws.type }}</code></div>
                {% if throws.description %}
                    <div>{{ throws.description }}</div>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}
</div>