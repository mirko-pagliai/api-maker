<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>
            {{- project.title -}}
            {%- if block("title") is defined %} - {{ block('title') }}{%- endif -%}
        </title>
        <link rel="stylesheet" href="assets/bootstrap/bootstrap.min.css">
        <link rel="stylesheet" href="assets/highlight/styles/default.css">
        <link rel="stylesheet" href="assets/default.css">
        <script src="assets/highlight/highlight.pack.js"></script>
        <script>hljs.initHighlightingOnLoad();</script>
    </head>
    <body>
        {{~ source('@temp/layout/topbar.html') }}

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3 col-lg-4 p-3">
                    {{~ source('@temp/layout/menu.html') }}
                </div>
                <div class="col-md-9 col-lg-8 p-3">
                    {%~ if block("content") is defined %}
                    {{ block('content') }}
                    {%~ endif %}
                </div>
            </div>
        </div>

        {{~ source('@temp/layout/footer.html') }}
    </body>
</html>