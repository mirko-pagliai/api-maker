<ul class="list-unstyled m-0">
    {%~ for class in classes %}
    <li class="text-truncate">
        <a href="{{ class.link }}" title="{{ class.name }}">
            {%- if class.isDeprecated -%}
                <del>{{ class.name }}</del>
            {%- else -%}
                {{ class.name }}
            {%- endif -%}
        </a>
    </li>
    {%~ endfor %}
</ul>